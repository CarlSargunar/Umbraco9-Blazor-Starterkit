@using Umbraco9.Core.Models.Elements

<section class="px-2 py-16 md:px-0 mb-8 bg-white">
    <div class="container items-center max-w-6xl px-8 rounded-md mx-auto xl:px-5 ba">
        <div class="flex flex-wrap items-center sm:-mx-3">
            <div class="w-full md:w-1/2 md:px-3">
                <div class="w-full pb-6 space-y-6 sm:max-w-md lg:max-w-lg md:space-y-4 lg:space-y-8 xl:space-y-9 sm:pr-5 lg:pr-0 md:pb-0">
                    <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl md:text-4xl lg:text-5xl xl:text-6xl">
                        <span class="block xl:inline">@Model.Title</span>
                    </h1>
                    <p class="mx-auto text-base text-gray-600 sm:max-w-md lg:text-xl md:max-w-3xl">@Model.Subtext</p>
                    @if (Model.CallToAction != null)
                    {
                        <div class="relative flex flex-col sm:flex-row sm:space-x-4">
                            <a href="@Model.CallToAction.Url" target="@Model.CallToAction.Target" class="flex items-center w-full px-6 py-3 mb-3 text-lg text-white bg-indigo-600 rounded-md sm:mb-0 hover:bg-indigo-700 sm:w-auto">
                                @Model.CallToAction.Title
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div class="w-full md:w-1/2">
                <div class="w-full h-auto overflow-hidden rounded-md shadow-xl sm:rounded-xl">
                    <img src="https://source.unsplash.com/random/1920x1080?coffee" class="">
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter]
    public HeroElementModel Model { get; set; }
}
